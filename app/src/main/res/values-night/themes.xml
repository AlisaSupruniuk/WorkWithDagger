<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WorkWithDagger" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">?attr/myThemeBackgroundColor</item>
        <item name="background">?attr/myThemeBackgroundColor</item>
        <item name="android:textColor">?attr/myThemeTextColor</item>
        <item name="myThemeTextColor">@color/myThemeTextColor</item>
        <item name="myThemeBackgroundColor">@color/myThemeBackColor</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">?attr/myThemeColorPrimary</item>
        <item name="colorPrimaryDark">?attr/myThemeColorPrimaryDark</item>
        <item name="colorAccent">?attr/myThemeColorAccent</item>
        <item name="myThemeColorBottomBindBack">@color/bottomBindBack</item>
        <item name="myThemeColorAccent">@color/myThemeColorAccent</item>
        <item name="myThemeColorPrimary">@color/myThemeColorPrimary</item>
        <item name="myThemeColorPrimaryDark">@color/myThemeColorPrimaryDark</item>
        <item name="actionBarItemBackground">@color/bottomBindBack</item>
        <item name="android:textColorPrimary">?attr/myThemeTextColor</item>
        <item name="actionMenuTextColor">?attr/myThemeTextColor</item>
     </style>
</resources>